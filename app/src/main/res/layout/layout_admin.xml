<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textViewTitre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Menu d'Administrateur"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="36sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="45dp" />

        <Button
            android:id="@+id/buttonElv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ElÃ¨ves" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="45dp" />

        <Button
            android:id="@+id/buttonEntrpr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Entreprises" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="45dp" />

        <Button
            android:id="@+id/buttonProf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Professeurs" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="45dp" />

        <Button
            android:id="@+id/buttonTuteur"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tuteurs" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>